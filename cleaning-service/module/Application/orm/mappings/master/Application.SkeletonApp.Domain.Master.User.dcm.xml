<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                          http://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="Application\SkeletonApp\Domain\Master\User" table="user">

        <id name="id" type="integer" column="id">
            <generator strategy="AUTO" />
            <sequence-generator sequence-name="user_seq" allocation-size="1" initial-value="1" />
        </id>

        <field name="username" column="username" type="text" nullable="false" />
        <field name="password" column="password" type="text" nullable="false" />
        <field name="role" column="role" type="text" nullable="false" />
        <field name="status" column="status" type="text" nullable="false" />

		<many-to-one target-entity="Application\SkeletonApp\Domain\Master\Customer" field="customer" inversed-by="user" />			
		<many-to-one target-entity="Application\SkeletonApp\Domain\Master\Pegawai" field="pegawai" inversed-by="user" />		
		
    </entity>
</doctrine-mapping>
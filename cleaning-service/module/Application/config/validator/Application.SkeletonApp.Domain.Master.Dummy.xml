<?xml version="1.0" encoding="UTF-8" ?>
<constraint-mapping xmlns="http://symfony.com/schema/dic/constraint-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://symfony.com/schema/dic/constraint-mapping http://symfony.com/schema/dic/constraint-mapping/constraint-mapping-1.0.xsd">

    <namespace prefix="Application">LiekToyota\Core\Validator\Constraints\</namespace>

    <class name="Application\SkeletonApp\Domain\Master\Dummy">
        <getter property="nama">
            <constraint name="NotBlank">
                <option name="message">Nama harus diisi</option>
            </constraint>
        </getter>

        <constraint name="Application:UniqueEntity">
            <option name="fields">
                <value>nama</value>
            </option>
            <option name="message">Nama ini sudah pernah terdaftar di database</option>
        </constraint>
    </class>


</constraint-mapping>